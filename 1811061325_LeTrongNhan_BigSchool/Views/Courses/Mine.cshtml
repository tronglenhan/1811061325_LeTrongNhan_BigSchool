@model IEnumerable<_1811061325_LeTrongNhan_BigSchool.Models.Course>
@{
    ViewBag.Title = "Mine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

<h2>Mine</h2>
<ul class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")

                </div>
            </div>
            <div class="detail">
                <span class="lecture">
                    @course.Lecturer.Name
                </span>
                <span>
                    @course.Category.Name
                </span>

            </div>

            <div class="action">
                <a href="@Url.Action("Edit","Courses", new { id = course.Id})">Edit |</a>
                <a href="#" class="js-cancel-course" data--course-id="@course.Id">Cancel</a>

            </div>


        </li>
    }


</ul>

@section scripts{
    <script>
        $(document).ready(function () {

            $(".js-cancel-course").click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm({
                    title: "Cancel Course?",
                    message: "Are you sure",
                    buttons: {
                        cancel: {
                            label: 'Cancel',
                            className: 'btn btn-primary'
                        },
                        confirm: {
                            label: 'Confirm',
                            className: 'btn btn-primary'
                        }
                    },
                    callback: function (result) {

                        if (result) {
                            $.ajax({

                                url: "api/courses/" + link.attr(" data--course-id"),
                                method: "DELETE"

                            })
                                .done(function () {

                                    link.parent("li").fadeOut(function () {

                                        $(this).remove();


                                    });


                                })
                                .fail(function () {

                                    alert("Something failed")


                                });

                        }
                    }


                });


            });



        });



    </script>

}


